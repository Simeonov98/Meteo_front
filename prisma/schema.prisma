generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  // shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  relationMode      = "prisma"
}

model Example {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  @@unique([provider, providerAccountId])
}

model City {
  id   Int    @id @default(autoincrement())
  name String @unique
}

model Dalivali {
  id          Int      @id @default(autoincrement())
  forecastDay DateTime
  weekday     Int
  tmax        Int
  tmin        Int
  wspd        String
  wdir        String
  humidity    Int
  text        String
  createdAt   DateTime @default(now())
  cityId      Int
  imageId     Int
  image       Image    @relation(fields: [imageId], references: [id])

  @@index([imageId])
}

model Freemeteo {
  id          Int      @id @default(autoincrement())
  forecastDay DateTime
  weekday     Int
  tmax        Int?
  tmin        Int
  text        String
  wdir        String
  rain        String
  createdAt   DateTime @default(now())
  cityId      Int
  imageId     Int
  image       Image    @relation(fields: [imageId], references: [id])

  @@index([imageId])
}

model Image {
  id        Int         @id @default(autoincrement())
  name      String      @unique
  src       Bytes       
  dalivali  Dalivali[]
  freemeteo Freemeteo[]
  sinoptik  Sinoptik[]
}

model Session {
  id           String   @id
  sessionToken String   @unique
  userId       String
  expires      DateTime
}

model Sinoptik {
  id           Int      @id @default(autoincrement())
  forecastDate DateTime
  weekday      Int
  tmax         Int
  tmin         Int
  wdir         String
  wspd         String
  text         String
  createdAt    DateTime @default(now())
  cityId       Int
  imageId      Int
  image        Image    @relation(fields: [imageId], references: [id])

  @@index([imageId])
}

model Snapshot {
  id          Int      @id @default(autoincrement())
  currentTime DateTime
  tmax        String
  tmin        String
}

model User {
  id            String    @id
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
